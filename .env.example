# TravelMind Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# LLM Configuration (for intent parsing and agent reasoning)
# ============================================================================
# Google Gemini API (FREE tier - 1.5M tokens/day) - RECOMMENDED
# Get key at: https://aistudio.google.com/apikey
GOOGLE_API_KEY=

# OpenAI API (if using GPT models)
OPENAI_API_KEY=

# Anthropic API (if using Claude models)
ANTHROPIC_API_KEY=

# Or use local/open models via Ollama (no key needed)
# OLLAMA_BASE_URL=http://localhost:11434

# ============================================================================
# API Keys (All services below are FREE tier / open data)
# ============================================================================

# Open-Meteo (weather data) - NO KEY REQUIRED
# Documentation: https://open-meteo.com/

# Geoapify Places API (attractions/POIs/restaurants) - FREE tier (3,000 requests/day)
# Sign up at: https://www.geoapify.com/
GEOAPIFY_API_KEY=

# OpenRouteService (routing) - FREE API key
# Sign up at: https://openrouteservice.org/dev/#/signup
OPENROUTESERVICE_API_KEY=

# Alternative: OSRM (routing) - NO KEY REQUIRED (self-hosted or public demo)
# OSRM_BASE_URL=http://router.project-osrm.org

# ============================================================================
# Application Settings
# ============================================================================

# Cache settings
CACHE_DIR=.cache/travelmind
CACHE_TTL_SECONDS=86400

# Rate limiting (requests per minute)
RATE_LIMIT_RPM=60

# API server settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Logging
LOG_LEVEL=INFO

# ============================================================================
# Development Settings
# ============================================================================
ENVIRONMENT=development
DEBUG=false
